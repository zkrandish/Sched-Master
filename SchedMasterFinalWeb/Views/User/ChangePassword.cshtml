@model SchedMasterFinalWeb.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
}

<link rel="stylesheet" type="text/css" href="~/Content/LoginStyles/UserLogin.css">

<div class="form-container">
    <div class="logo">
        <img src="~/Content/images/AppLogo.png" alt="Logo">
    </div>

    <h1>SchedMaster</h1>
    <p>LaSalle College - Montréal</p>

    @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        

        @*<div class="form-group">
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>*@

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword)
            @Html.PasswordFor(m => m.NewPassword, new { @class = "input-field", @placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "error-message" })
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-field", @placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
            @Html.ValidationSummary(true, "", new { @class = "error-message validation-summary" })
        </div>

        <button type="submit" class="submit-button">Change Password</button>
       
    }

</div>

